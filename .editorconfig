root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python
[*.py]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 2

# YAML files (GitHub Actions, configs)
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# Markdown (allow trailing spaces for line breaks)
[*.md]
trim_trailing_whitespace = false
